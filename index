<script>
  const chkDatos = document.getElementById('chkDatos');
  const chkReglamento = document.getElementById('chkReglamento');
  const btnConfirmar = document.getElementById('btnConfirmar');

  function validar() {
    btnConfirmar.disabled = !(chkDatos.checked && chkReglamento.checked);
  }

  chkDatos.addEventListener('change', validar);
  chkReglamento.addEventListener('change', validar);
</script>

